<header class="text-center">
  <img id="header-img" src="img/burgerheader.png">
  <h3 id="header-title">Eat-Da-Burger!</h3>
</header>

<div class="container">
  <div class="row">
    {{!-- left: burger to be devoured --}}
    <div class="col-sm-12 col-md-6">
      <ul class="list-group burger-list">
        <span class="burger-container">

        {{#each burgers}}
          {{#if false}}
            {{>burger/burger-block devoured=false}}
          {{/if}}
        {{/each}}

         </span>
      </ul>
    </div>

     {{!-- right: burger devoured --}}
    <div class="col-sm-12 col-md-6">
      <ul class="list-group burger-list">

        <span class="devoured-burgers-container">
        {{#each burgers}}
          {{!-- {{#if true}}
            {{>burger/burger-block devoured=true}}
          {{/if}} --}}
        {{/each}}
         </span>
      </ul>
    </div>
      
  </div>

  {{!-- burger input --}}
  <div class="row">
    <div class="col-sm-12 text-center">
      <textarea placeholder="What burger do you want?" rows="5" class="text-center"
        id="new-burger"></textarea>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 text-center">
      <button class="btn btn-success submit-btn" type="submit">Submit</button>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 text-center">
      <p id="hint">Enter a burger you want to eat<br>
        Click the "Submit" button.</p>
    </div>
  </div>

</div>

<script src="./js/frontendscript.js"></script>

