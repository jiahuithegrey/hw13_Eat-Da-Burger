<div class="container shadow">
  <header class="text-center pt-3">
    <img class="w-20"id="header-img" src="img/burgerheader.png">
    <h3 class="mt-3" id="header-title">Eat-Da-Burger!</h3>
  </header>

  {{!-- burger input --}}
  <div class="row">
    <div class="col-sm-12 text-center">
      <textarea placeholder="What burger do you want?" rows="3" class="text-center"
        id="new-burger"></textarea>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 text-center">
      <button class="insert btn btn-success mt-3" id="submit-btn" type="submit">Order</button>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 text-center">
      <p id="hint">Enter a burger you want to eat<br>
        Click the "Order" button.</p>
    </div>
  </div>

  <div class="row d-flex justify-content-between">

    {{!-- left: burger to be devoured --}}
    <div class="col-sm-12 col-md-6 left">
      <h5 class="text-center">Your Burger:</h5>
      <ul class="list-group shadow-sm burger-container p-2">
        {{!-- <span class="burger-container"> --}}
          {{#each burgers}}
          {{/each}}
         {{!-- </span> --}}
      </ul>
    </div>

    {{!-- right: burger devoured --}}
    <div class="col-sm-12 col-md-6 right">
      <h5 class="text-center">Devoured Burger:</h5>
      <ul class="list-group shadow-sm devoured-container p-2">
        {{!-- <span class="devoured-container"> --}}
          {{#each burgers}}
          {{/each}}
        {{!-- </span> --}}
      </ul>
    </div> 
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="devourModal" tabindex="-1" role="dialog" aria-labelledby="devourModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="devourModalTitle">Devour Alert</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Woohoo you just devoured a burger!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Keep eating</button>
      </div>
    </div>
  </div>
</div>

<script src="./js/frontendscript.js"></script>
